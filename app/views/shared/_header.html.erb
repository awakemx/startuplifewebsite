<div class="top-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="sessions">
          <% if user_signed_in? %>
            <%= link_to 'Mi Cuenta', edit_user_registration_path %> |
            <%= link_to "Salir", destroy_user_session_path, method: :delete, class: 'salir' %>
          <% else %>
            <%= link_to "Acceder a tu Cuenta", user_session_path %> |
            <%= link_to "Registrate", new_user_registration_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <%=link_to (image_tag 'logo.svg') , root_path %>
      <div class="filtros">
        <%= link_to 'Te los perdiste', pasado_path , class: 'topic-top pasado' %>
        <%= link_to 'Estan en vivo', presente_path , class: 'topic-top presente' %>
        <%= link_to 'Van a pasar', futuro_path , class: 'topic-top futuro' %>
        <%= link_to 'Calendario', root_path , class: 'topic-top calendario' %>
      </div>
    </div>
  </div>
</div>
